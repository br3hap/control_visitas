<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="account_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='anticipo']" position="after">
                <field name="advance_amount" force_save="1" readonly="1" attrs="{'invisible':[('anticipo', '=', False)]}"/>
                <field name="advance_remaining_amount" force_save="1" readonly="1" attrs="{'invisible':[('anticipo', '=', False)]}" />
            </xpath>
        </field>
    </record>
</odoo>