<odoo>
  <data>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">view.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
        
            <xpath expr="//field[@name='invoice_date']" position="after">

                <field name="date_related_document"
                attrs="{'readonly':[('state','!=','draft')],
                        'invisible':[('move_type', 'in',('out_invoice','in_invoice', 'entry'))],
                        'required':[('move_type', 'in',('out_refund','in_refund'))]}"/>

                <field name="reason"
                options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                attrs="{'readonly':[('state','!=','draft')],
                        'invisible':[('move_type', '!=','out_refund')],
                        'required':[('move_type', '=','out_refund')]}"/>

                <field name="sustain"
                attrs="{'readonly':[('state','!=','draft')],
                        'invisible':[('move_type', '!=','out_refund')],
                        'required':[('move_type', '=','out_refund')]}"/>

            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">

                <field name="type_voucher"
                options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                attrs="{'readonly':[('state','!=','draft')],
                        'invisible':[('move_type', 'not in',['in_refund','in_invoice'])],
                        'required':[('move_type', 'in',['in_refund','in_invoice'])]}"/>
                
                <field name="serie"
                attrs="{'readonly':[('state','!=','draft')],
                        'invisible':[('move_type', 'not in',['in_refund','in_invoice'])]}"/>
                
                <field name="correlativo"
                attrs="{'readonly':[('state','!=','draft')],
                        'invisible':[('move_type', 'not in',['in_refund','in_invoice'])]}"/>
                
                <field name="anho_dua"
                attrs="{'readonly':[('state','!=','draft')],
                        'invisible':[('move_type', 'not in',['in_refund','in_invoice'])]}"/>

                <field name="related_document_type"
                attrs="{'readonly':[('state','!=','draft')],
                        'invisible':[('move_type', 'in',('out_invoice','in_invoice', 'entry'))],
                        'required':[('move_type', 'in',('out_refund','in_refund'))]}"/>

                <field name="related_document"
                attrs="{'readonly':[('state','!=','draft')],
                        'invisible':[('move_type', 'in',('out_invoice','in_invoice', 'entry'))],
                        'required':[('move_type', 'in',('out_refund','in_refund'))]}"/>

            </xpath>
            <xpath expr="//button[@name='action_reverse']" position="attributes">
                <attribute name="string">Agregar Nota de Cr√©dito</attribute>
            </xpath>
        </field>
    </record>
    <record id="res_currency_form" model="ir.ui.view">
        <field name="name">res.currency.form</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form" />
        <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='rates']/field[@name='rate_ids']/tree[1]/field[@name='inverse_company_rate']" position="replace">
                        <field name="inverse_company_rate" string="test"/>
                </xpath>
        </field>
    </record>

  </data>
</odoo>