<odoo>
  <data>
    <record id="view_move_form_auto_cuotas_inherit" model="ir.ui.view">
        <field name="name">view.move.form.auto.cuotas.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
          <xpath expr="//button[@name='button_cancel']" position="after">

              <button name="action_rellenar_cuotas" id="rellenar_cuotas_btn"
                type="object" class="oe_highlight"
                attrs="{'invisible': ['|','|',('state', '!=', 'draft'), ('move_type', '=', 'in_invoice'), ('pago_credito', '=', True)]}"
                string="Rellenar Cuotas"/>

          </xpath>
        </field>
    </record>

    <record id="view_rellenar_cuotas_form" model="ir.ui.view">
      <field name="name">rellenar.cuotas.form</field>
      <field name="model">rellenar.cuotas</field>
      <field name="arch" type="xml">
          <form string="Rellenar Cuotas">
            <group>
                <field name="tipo_cuotas"/>
                <field name="numero_cuotas"
                attrs="{'invisible': [('tipo_cuotas', '!=', '02')],
                        'required': [('tipo_cuotas', '=', '02')]}"/>
            </group>
            <footer>
              <button string="Validar" name="validar" type="object" class="oe_highlight"/>
              <button string="Cancel" class="btn btn-secondary" special="cancel"/>
            </footer>
          </form>
      </field>
    </record>

  </data>
</odoo>