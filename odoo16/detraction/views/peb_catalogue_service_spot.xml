<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_peb_catalogue_service_spot_tree" model="ir.ui.view">
            <field name="name">peb.catalogue.service.spot.tree</field>
            <field name="model">peb.catalogue.service.spot</field>
            <field name="arch" type="xml">
                <tree string="Spot Service Catalog">
                    <field name="code"/>
                    <field name="description"/>
                    <field name="percentage"/>
                </tree>
            </field>
        </record>

        <record id="view_peb_catalogue_service_spot_form" model="ir.ui.view">
            <field name="name">peb.catalogue.service.spot.form</field>
            <field name="model">peb.catalogue.service.spot</field>
            <field name="arch" type="xml">
                <form string="Spot Service Catalog">
                    <group>
                        <field name="code"/>
                        <field name="description"/>
                        <field name="percentage"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_catalogue_service_spot" model="ir.actions.act_window">
            <field name="name">Spot Service Catalog</field>
            <field name="res_model">peb.catalogue.service.spot</field>
            <field name="view_mode">tree,form</field>
            <!--<field name="search_view_id" ref="view_currency_search"/>-->
        </record>

        <menuitem id="menu_catalogue_service_spot"
                  name="Spot Service Catalog"
                  action="action_catalogue_service_spot"
                  parent="detraction.menu_detraction"/>

    </data>
</odoo>

