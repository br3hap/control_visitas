<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="sequence_shipping_trace" model="ir.sequence">
        <field name="name">Shipping Tracking</field>
        <field name="code">delivery.trace.registration</field>
        <field name="prefix">TRCK-000</field>
        <field name="padding">2</field>
    </record>

    <!-- shipping.trace action window -->
    <record id="shipping_trace_view_action" model="ir.actions.act_window">
        <field name="name">Seguimiento de Despacho</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shipping.trace</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
        </field>
    </record>


    <!-- shipping.trace tree view -->
    <record id="shipping_trace_view_tree" model="ir.ui.view">
        <field name="name">shipping.trace.view.tree</field>
        <field name="model">shipping.trace</field>
        <field name="arch" type="xml">
            <tree decoration-muted="shipping_status_id > 1"
                  decoration-info="shipping_status_id > 3"
                  decoration-primary="shipping_status_id > 5"
                  decoration-danger="shipping_status_id == 7"
            >
                <field name="name"/>
                <field name="order_ref"/>
                <field name="partner_id"/>
                <!-- <field name="shipping_trace_line_ids" 
                widget="many2many_tags"
                /> -->
                <field name="street"/>
                <field name="city"/>
                <field name="district"/>
                <field name="picking_id"/>
                <field name="picking_date"/>
                <field name="shipping_status_id"/>
                
            </tree>
        </field>
    </record>

    <!-- shipping.trace form view -->
    <record id="shipping_trace_view_form" model="ir.ui.view">
        <field name="name">shipping.trace.view.form</field>
        <field name="model">shipping.trace</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="shipping_status_id" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="picking_button" class="oe_stat_button" icon="fa-location-arrow" string="Picking"/>
                    </div>
                    <group string='Tracking Information'>
                        <group>
                            <field name="name"/>
                            <field name="order_ref"/>
                            <field name="partner_id"/>
                            <field name="street"/>
                            <field name="city"/>
                            <field name="district"/>
                            
                        </group>
                        <group>
                            <field name="picking_id"/>
                            <field name="picking_date"/>
                            <field name="scheduled_shipping_date"/>
                        </group>
                      
                    </group>
                    <group string="Shipping Information">
                        <group>
                            <field name="shipping_company_id"/>
                            <field name="shipping_carrier_id"/>
                            <field name="vat_name"/>
                        </group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="vehicle_brand"/>
                        </group>
                    </group>
                    <field name="remark" placeholder="Obsevaciones"/>

                    <notebook>
                        <page name="detalle" string="Detalle">
                            <field name="shipping_trace_line_ids">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>

            
        </field>
    </record>



    <!-- shipping.trace kanban view -->
    <record id="shipping_trace_view_kanban" model="ir.ui.view">
        <field name="name">shipping.trace.view.kanban</field>
        <field name="model">shipping.trace</field>
        <field name="arch" type="xml">
            <kanban string="Seguimiento de pedidos" class="oe_background_grey o_kanban_dashboard o_project_kanban o_emphasize_colors" default_group_by="shipping_status_id">
                <field name="name"/>
                <field name="order_ref"/>
                <field name="partner_id"/>
                <field name="city"/>
                <field name="district"/>
                <field name="street"/>
                <field name="order_ref"/>
                <field name="scheduled_shipping_date"/>
                <field name="date_deadline_formatted"/>
                <field name="name"/>
                <field name="color"/>
                <field name="shipping_status_id"  options='{"group_by_tooltip": {"name": "Estado"}}'/>
                <!-- <progressbar field="kanban_state" colors='{"done": "success", "blocked": "danger", "normal": "muted"}'/> -->
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="{{!selection_mode ? 'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) : ''}} oe_kanban_card oe_kanban_global_click">
                            <div class="o_project_kanban_main">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_primary">
                                            <span><t t-esc="record.name.value"/></span>
                                        </div> 
                                        <div>
                                            <strong><t t-esc="record.order_ref.value"/></strong>
                                        </div>
                                        <div>
                                            <span t-if="record.partner_id.value">
                                                <t t-esc="record.partner_id.value"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span><t t-esc="record.city.value"/></span>
                                        </div>
                                        <div>
                                            <span><t t-esc="record.district.value"/></span>
                                        </div>
                                        <div>
                                            <span><t t-esc="record.street.value"/></span>
                                        </div>
                                        <!-- <div t-if="record.alias_name.value and record.alias_domain.value">
                                            <span><i class="fa fa-envelope" role="img" aria-label="Domain Alias" title="Domain Alias"></i> <t t-esc="record.alias_id.value"/></span>
                                        </div> -->
                                        
                                    </div>
                                </div>
                                <div class="o_dropdown_kanban dropdown" t-if="!selection_mode" groups="base.group_user">
                                    <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <!-- <a t-if="widget.editable" role="menuitem" type="set_cover" class="dropdown-item" data-field="displayed_image_id">Set Cover Image</a> -->
                                        <!-- <a name="165" role="menuitem" type="action" class="dropdown-item">Share</a> -->
                                        <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit Task</a>
                                        <!-- <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a> -->
                                        <div role="separator" class="dropdown-divider"/>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">

                                    <t t-set="date_format" t-value="'MM/DD/YY'"/>
                                    <t t-set="date" t-value=""/>

                                    <t t-if="record.scheduled_shipping_date.raw_value and moment(record.scheduled_shipping_date.raw_value.toISOString()).startOf('day') lt moment().startOf('day')">
                                        <t t-set="deadline_class" t-value="'oe_kanban_text_red'" />
                                    </t>
                                    <t t-elif="record.scheduled_shipping_date.raw_value and moment(record.scheduled_shipping_date.raw_value.toISOString()).startOf('day') lt moment().endOf('day')">
                                        <t t-set="deadline_class" t-value="'text-warning font-weight-bold'" />
                                    </t>
                                    <!-- Date value -->
                                    <t t-if="record.scheduled_shipping_date.raw_value" t-set="date" t-value="record.date_deadline_formatted.raw_value" />
                                    <span name="date" t-attf-class="#{deadline_class || ''}"><t t-esc="date" /></span>

                                </div>


                            </div>

                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <menuitem
        id="shippping_trace_menu"
        name="Seguimiento de Despacho"
        action="shipping_trace_view_action"
        parent="stock.menu_stock_warehouse_mgmt"
        groups="stock.group_stock_manager"
        sequence="10"/>

    
</odoo>
