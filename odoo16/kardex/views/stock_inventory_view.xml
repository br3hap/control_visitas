				<xpath expr="//field[@name='accounting_date']" position="before">
					<field name="beginning_balance"/>
					<field name="date_done"/>
				</xpath>
			</field>
		</record>

		<record id="view_stock_inventory_sequence_tree" model="ir.ui.view" >
			<field name="name">stock.inventory.sequence.tree</field>
			<field name="model">stock.inventory</field>
			<field name="inherit_id" ref="stock.view_inventory_tree"></field>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='company_id']" position="after">
					<field name="code"/>
					<field name="beginning_balance"/>
				</xpath>
			</field>
		</record>

	</data>
