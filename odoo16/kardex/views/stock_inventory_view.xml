			<field name="model">stock.inventory</field>
			<field name="inherit_id" ref="stock.view_inventory_form"></field>
			<field name="arch" type="xml">
				<!--
				<xpath expr="//div[@class='oe_title']" position="replace">
					<div class="oe_title">
						<h1>
							<label string="Draft Inventory" attrs="{'invisible': [('state','in',('done',))]}"/>
							<label string="Inventory" attrs="{'invisible': [('state','not in',('done',))]}" class="oe_inline"/>
							<field name="code" readonly="1" class="oe_inline"/>
						</h1>
                    </div>
				</xpath>
				
