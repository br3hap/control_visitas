<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="view_kardex_form_extended" model="ir.ui.view">
            <field name="name">report.kardex.form</field>
            <field name="model">report.kardex</field>
            <field name="arch" type="xml">
                <form string="Excel Report file">
                    <group>
                        <field name="kardex_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>
    
        <record id="view_kardex_filter_wizard" model="ir.ui.view">
            <field name="name">kardex.filter.wizard</field>
            <field name="model">kardex.filter</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Assistant for the generation of Kardex">
                        <field name="year"/>
                        <field name="month"/>
                        <field name="warehouse_ids" options="{'no_create': True, 'no_open': True}"/>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                    <!--  <field name="include_null_products"/> -->
                    </group>
                    <br/><br/><br/><br/>
                    <footer>
                        <button name="export_excel" type="object" string="Export Excel" class="oe_highlight"/>
						<button name="calculate_initial_stock" type="object" string="Calculate initial stock"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_kardex_filter" model="ir.actions.act_window">
            <field name="name">Kardex Filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kardex.filter</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
