<odoo>
  <data>

    <record id="view_tax_form_inherit" model="ir.ui.view">
        <field name="name">view.tax.form.inherit</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type_tax_use']" position="before">
                <field name="igv_affectation" 
                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                <field name="tax_internactional_code"/>
            </xpath>
        </field>
    </record>

  </data>
</odoo>