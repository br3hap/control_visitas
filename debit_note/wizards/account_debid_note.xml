<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="account_debit_note_form" model="ir.ui.view">
        <field name="name">account.debit.note.form</field>
        <field name="model">account.debit.note</field>
        <field name="inherit_id" ref="account_debit_note.view_account_debit_note" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reason']" position="before">
                <field name="reason_id" domain="[('type_catalog', '=', 4)]"/>
            </xpath>
            <xpath expr="//field[@name='reason']" position="attributes">
                <attribute name="string">Sustento</attribute>
            </xpath>
        </field>
    </record>
</odoo>