<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_mod_request">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <style>
                                th, td {
                                padding-left: 15px;
                                padding-right: 15px;
                                }

                            </style>
                            <h3><span t-field="o.name" /></h3>

                            <table
                                style="border: 1px solid black; width: 100%; margin:0px; padding: 0px 0px 0px;">
                                <tbody>

                                    <tr>
                                        <td>
                                            <b>Applicant name : <span
                                                    t-field="o.name_applicant" /></b>
                                        </td>
                                        <td>
                                            <b>Seller : <span
                                                    t-field="o.seller" /></b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Request process : <span
                                                    t-field="o.process_request" /></b>
                                        </td>
                                        <td>
                                            <b>Type Request : <span
                                                    t-field="o.type_request" /></b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Format : <t t-if="o.type_request == 'judicial'">
                                                    <span
                                                        t-field="o.format_request" />
                                                </t>
                                                <t
                                                    t-else="">
                                                    --
                                                </t>
                                            </b>
                                        </td>

                                        <td>
                                            <b>Date Request : <span
                                                    t-field="o.date_request" /></b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Description : <span
                                                    t-field="o.description" /></b>
                                        </td>
                                        <td>
                                            <b>Currency : <span
                                                    t-field="o.currency_id" /></b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Partner : <span
                                                    t-field="o.partner_id" /></b>
                                        </td>
                                        <td>
                                            <b>Amount : <span
                                                    t-field="o.amount_compute" /></b>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br></br>
                            <t t-if="o.type_request == 'judicial'">
                                <div>
                                    <p>
                                        <b> Requirements</b>
                                    </p>
                                    <table
                                        style="border: 1px solid black; width: 100%; font-size: 13px; margin:0px; padding: 0px 0px 10px 0px;">
                                        <thead>
                                            <th>Case</th>
                                            <th>Proceedings</th>
                                            <th>Amount</th>
                                            <th>Date</th>
                                            <th>Court / Entity</th>
                                            <th>RUC / DNI</th>
                                            <!-- <th>Description</th> -->
                                            <th>Partner</th>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="o.mod_request_requirements_ids"
                                                t-as="line">
                                                <tr>
                                                    <td>
                                                        <b>&#160;</b>
                                                        <span t-field="line.case_requirement"></span>
                                                    </td>
                                                    <td>
                                                        <b>&#160;</b>
                                                        <span t-field="line.proceedings_requirement"></span>
                                                    </td>
                                                    <td>
                                                        <b>&#160;</b>
                                                        <span t-field="line.amount_requirement"></span>
                                                    </td>
                                                    <td>
                                                        <b>&#160;</b>
                                                        <span
                                                            t-field="line.date_request_requirement"></span>
                                                    </td>
                                                    <td>
                                                        <b>&#160;</b>
                                                        <span
                                                            t-field="line.court_entity_requirement"></span>
                                                    </td>
                                                    <td>
                                                        <b>&#160;</b>
                                                        <span t-field="line.ruc_dni_requirement"></span>
                                                    </td>
                                                    <!-- <td>
                                                        <b>&#160;</b>
                                                        <span t-field="line.description_requirement"></span>
                                                    </td> -->
                                                    <td>
                                                        <b>&#160;</b>
                                                        <span t-field="line.partner_id.name"></span>
                                                    </td>

                                                </tr>
                                            </t>

                                        </tbody>
                                    </table>

                                </div>
                            </t>
                            <br></br>
                            <b>Bank : <span
                                    t-field="o.bank" /></b>
                            <br></br>
                            <b>Account : <span
                                    t-field="o.account" /></b>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>