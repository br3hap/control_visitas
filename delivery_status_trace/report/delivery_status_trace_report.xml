<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="shipping_trace_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="delivery_status_trace.shipping_trace_order_report" /><!-- 
                    t-lang="doc.partner_id.lang" -->
            </t>
        </t>
    </template>

    <template id="shipping_trace_order_report">
        <t t-call="web.external_layout">
            <div class="page" style="font-size: 13px !important;">
                <t t-foreach="docs" t-as="o">
                        <style>
                            th, td {
                            padding-left: 15px;
                            padding-right: 15px;
                            }
                           
                        </style>
                        
                        <table style="font-size:13px;width: 100%; margin:0px; padding: 0px 0px 10px 0px;">
                            <tbody>


                                <tr style="font-size:13px">
                                    <td>&#160;</td>
                                    <td class="pull-right">
                                    Lima,&#160;
                                        <span t-esc="o.picking_date" t-options="{'widget': 'date', 'format': 'd'}"/>
                                    &#160;de&#160;
                                        <span t-esc="o.picking_date" t-options="{'widget': 'date', 'format': 'MMMM'}"/>
                                    &#160;del&#160;
                                        <span t-esc="o.picking_date" t-options="{'widget': 'date', 'format': 'y'}"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <table style="font-size:13px;width: 100%">
                            <tbody>
                                <tr>
                                    <td>&#160;</td>
                                    <td class="pull-right">
                                        <b>Reporte de Despacho NÂ°:</b>
                                        <span t-field="o.name"></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br></br>
                        <p>
                            <b>INFORMACION DE SEGUIMIENTO</b>
                        </p>
                        <table style="border: 2px solid black; width: 100%; font-size: 13px; margin:0px; padding: 0px 0px 10px 0px;">
                            <tbody>
                                <tr>
                                    <td>
                                        <b>REFERENCIA DE ORDEN</b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.order_ref"></span>
                                    </td>
                                    <td>
                                        <b>NRO PICKING</b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.picking_id.name"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>FECHA DE REGISTRO</b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.picking_date"></span>
                                    </td>
                                    <td>
                                        <b>FECHA PROGRAMADA DE ENVIO</b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.scheduled_shipping_date"></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <p>
                            <b>DATOS DEL CLIENTE</b>
                        </p>
                        <table style="border: 2px solid black; width: 100%; font-size: 13px; margin:0px; padding: 0px 0px 10px 0px;">
                            <tbody>
                                <tr>
                                    <td>
                                        <b>NOMBRE DEL CLIENTE</b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.partner_id.name"></span>
                                    </td>
                                     <td>
                                        <b>DIRECCION </b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.street"></span>
                                    </td>
                                   
                                </tr>
                                <tr>
                                    <td>
                                        <b>CIUDAD</b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.city"></span>
                                    </td>
                                    <td>
                                        <b>DISTRITO</b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                         <span t-field="o.district"></span>
                                    </td>
                                </tr>


                            </tbody>
                        </table>
                        <br/>
                        <p>
                            <b> INFORMACION DE TRANSPORTE</b>
                        </p>
                        <table style="border: 2px solid black; width: 100%; font-size: 13px; margin:0px; padding: 0px 0px 10px 0px;">
                            <tbody>
                                <tr>
                                    <td>
                                        <b>EMPRESA DE TRANSPORTE</b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.shipping_company_id"></span>
                                    </td>
                                     <td>
                                        <b>TRANSPORTISTA </b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.shipping_carrier_id"></span>
                                    </td>
                                   
                                </tr>
                                <tr>
                                    <td>
                                        <b>DOCUMENTO DE IDENTIDAD</b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.vat_name"></span>
                                    </td>
                                     <td>
                                        <b>VEHICULO </b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.vehicle_id.plate_number"></span>
                                    </td>
                                   
                                </tr>
                                <tr>
                                    <td>
                                        <b>MARCA DE VEHICULO</b>
                                    </td>
                                    <td>
                                        <b>:&#160;</b>
                                        <span t-field="o.vehicle_brand"></span>
                                    </td>
                                     <td>
                                        <b></b>
                                    </td>
                                    <td>
                                        <b>&#160;</b>
                                        <!-- <span t-field="o.shipping_carrier_id"></span> -->
                                    </td>
                                   
                                </tr>
                              
                            </tbody>
                         </table>
                        <br></br>
                        <p>
                            <b> DETALLE</b>
                        </p>
                        <table style="border: 2px solid black; width: 100%; font-size: 13px; margin:0px; padding: 0px 0px 10px 0px;">
                            <thead>
                                <th>Producto</th>
                                <th>Unid. medida</th>
                                <th>Cantidad</th>
                            </thead>
                            <tbody>
                                <t t-foreach="o.shipping_trace_line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <b>&#160;</b>
                                            <span t-field="line.product_id.name"></span>
                                        </td>  
                                        <td>
                                            <b>&#160;</b>
                                            <span t-field="line.product_uom"></span>
                                        </td>   
                                        <td>
                                            <b>&#160;</b>
                                            <span t-field="line.product_qty"></span>
                                        </td>    
                                          
                                    </tr>
                                </t>
                               
                            </tbody>
                        </table>
                        <br></br>

                        <p>
                            <b> OBSERVACIONES</b>
                        </p>
                        <table style="border: 2px solid black; width: 100%; font-size: 13px; margin:0px; padding: 0px 0px 10px 0px;">
                            <tbody>
                                <tr>
                                    <td>
                                        <b>COMENTARIOS</b>
                                    </td>
                                    <td>
                                        <b>&#160;</b>
                                        <span t-field="o.remark"></span>
                                    </td>   
                                      
                                </tr>
                            </tbody>
                        </table>

                </t>
            </div>

        </t>

</template>
</odoo>