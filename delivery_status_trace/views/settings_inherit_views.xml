<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_shipping" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.shipping</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-string='Inventory']/div[hasclass('row')][last()]" position="after">
                <h2> Shipping </h2>
                
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="allow_shipping_trace" class="oe_inline" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_shipping_trace"/>
                            <div class="text-muted">
                                Allows you to manage the follow-up of an order after validating it in picking
                            </div>
                        </div>  
                        
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>