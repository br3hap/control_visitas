# -*- coding: utf-8 -*-
from openerp import models, fields, api

class tabla_bien_servicio(models.Model):
    _name = "tabla.bien.servicio"
    _rec_name = 'descripcion'
    codigo = fields.Char(string="Código", required=True)
    descripcion = fields.Char(string="Descripción", required=True)
    porcentaje = fields.Float(string="Porcentaje", required=True)
    
    @api.multi
    @api.depends('codigo', 'descripcion')
    def name_get(self):
        result = []
        for table in self:
            l_name = table.codigo and table.codigo + ' - ' or ''
            l_name +=  table.descripcion
            result.append((table.id, l_name ))
        return result

