<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="customer_rest_api_view_form" model="ir.ui.view">
        <field name="name">customer.rest.api.view.form</field>
        <field name="model">customer.rest.api</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="odoo_api_id" readonly="1"/>
                            <field name="partner_id" />
                            
                        </group> 
                        <group>
                            <field name="succes"  readonly="1"/>
                            <field name="response"  readonly="1"/>
                            
                        </group>                       
                    </group>
                   
                    <notebook>
                        <page string="Data">
                            <group>
                                <field name="data_text" readonly="1"  nolabel="1" style="height: 150px;color:rgba(255, 255, 255, 0.5); background:#212529;font-family: monospace;"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
               
              
            </form>
        </field>
    </record>

    <record id="customer_rest_api_view_tree" model="ir.ui.view">
        <field name="name">customer.rest.api.view.tree</field>
        <field name="model">customer.rest.api</field>
        <field name="arch" type="xml">
            <tree >
                <!-- <field name="name" /> -->
                <field name="partner_id" />
                <field name="odoo_api_id"/>
                <field name="succes" />
                <!-- <field name="data_text" /> -->
                <field name="response" />
            </tree>
        </field>
    </record>

    <record id="customer_rest_api_action" model="ir.actions.act_window">
        <field name="name">Customer</field>
        <field name="res_model">customer.rest.api</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="customer_rest_api_menu"
        name="Customer"
        parent="odoo_rest_api_menu_parent"
        action="customer_rest_api_action"
        sequence="10"/>
</odoo>