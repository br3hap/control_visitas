<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="odoo_rest_api_view_form" model="ir.ui.view">
        <field name="name">odoo.rest.api.view.form</field>
        <field name="model">odoo.rest.api</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="account_token" />
                        </group> 
                                       
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="odoo_rest_api_view_tree" model="ir.ui.view">
        <field name="name">odoo.rest.api.view.tree</field>
        <field name="model">odoo.rest.api</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name" />
                <field name="account_token" />
            </tree>
        </field>
    </record>

    <record id="odoo_rest_api_action" model="ir.actions.act_window">
        <field name="name">Rest Api</field>
        <field name="res_model">odoo.rest.api</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="odoo_rest_api_root"
        name="Odoo Rest Api"
        action="odoo_rest_api_action"
        sequence="10"
        groups="odoo_rest_api.group_api_odoo"/>
    <menuitem
        id="odoo_rest_api_menu_parent"
        name="Api"
        parent="odoo_rest_api_root"
        sequence="1"/> 
    <menuitem
        id="odoo_rest_api_menu"
        name="Odoo Api"
        action="odoo_rest_api_action"
        parent="odoo_rest_api_menu_parent"
        sequence="1"/>       
</odoo>