<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="whatsapp_send_msg_wizard" model="ir.ui.view">
            <field name="name">whatsapp.message.wizard.form</field>
            <field name="model">whatsapp.message.wizard</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="WhatsApp Message">
                    <group>
                        <field name="res_id" invisible="1"/>
                        <field name="user_id"/>
                        <field name="mobile" string="Whatsapp"/>
                    </group>
                    <group>
                        <field name="affair"/>
                        <field name="object_origin" invisible="1"/>
                    </group>
                    <group>
                        <field name="message" attrs="{'invisible': [('show_note', '=', True)]}"/>
                        <field name="message_wsp" string="message" attrs="{'invisible': [('show_note', '=', False)]}"/>
                        <field name="show_note" invisible="1"/>
                        <field name="message_history" invisible="1"/>
                        <field name="note"  attrs="{'invisible': [('show_note', '=', False)]}"/>
                    </group>
                    <footer>
                        <button name="send_message" string="Send" type="object"/>
                        <button name="cancel" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>