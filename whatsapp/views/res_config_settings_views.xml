<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_whatsapp" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.whatsapp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='partner_autocomplete']" position="after" >
                
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="whatsapp_enable"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="whatsapp" for="whatsapp_enable"/>
                        <div class="text-muted" id="msg_whatsapp_enable">
                            Enable send message to whatsapp.
                        </div>
                        <div class="content-group" attrs="{'invisible': [('whatsapp_enable','=',False)]}">
                            <div class="mt16">
                                <label for="whatsapp_api_url" class="o_light_label"/>
                                <field name="whatsapp_api_url" attrs="{'required': [('whatsapp_enable','=',True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
