<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_whatsapp" model="ir.ui.view">
        <field name="name">view.move.whatsapp</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='preview_invoice']" position="before">
                <field name="enable_whatsapp" invisible="1"/>
                <button 
                    name="whatsapp_send_invoice"
                    type="object"
                    icon="fa-whatsapp"
                    string="  Send By whatsapp"
                    class="btn-primary"
                    title="Send By whatsapp"
                    attrs="{'invisible': [('enable_whatsapp', '=', False)]}"/>
            </xpath>
            
        </field>
    </record>

</odoo>
