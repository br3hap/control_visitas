<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_whatsapp" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.whatsapp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="whatsapp.res_config_settings_view_form_whatsapp"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='whatsapp_api_url']" position="after" >
                <br/>
                <label for="whatsapp_enable_invoice" class="o_light_label"/>
                <field name="whatsapp_enable_invoice"/>
                <div class="text-muted" id="msg_whatsapp_invoice">
                    Enable send message to whatsapp of invoice module.
                </div>
            </xpath>
        </field>
    </record>
</odoo>
