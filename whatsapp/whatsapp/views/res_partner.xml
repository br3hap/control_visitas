<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id='view_partner_form_wedd_inherit' model='ir.ui.view'>
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='image_1920']" position="before">
                    <div class="oe_button_box" name="button_box" attrs="{'invisible':[('enable_whatsapp', '=',False)]}">
                        <button name="send_msg" string="Whatsapp Message" type="object" class="oe_stat_button" icon="fa-whatsapp"/>
                    </div>
                </xpath>
                
                <xpath expr="//field[@name='mobile']" position="after">
                    <field name="enable_whatsapp" invisible="1"/>
                    <button
                        type="object"
                        name="send_msg"
                        class="btn-lg btn-link mb4 fa fa-whatsapp"
                        style="font-weight: bolder;"
                        aria-label="Whatsapp Message"
                        title="Whatsapp Message"
                        attrs="{'invisible':[('enable_whatsapp', '=',False)]}"
                        />
                </xpath>
            </field>
        </record>
    </data>

</odoo>