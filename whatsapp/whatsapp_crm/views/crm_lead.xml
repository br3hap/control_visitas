<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_form_whatsapp" model="ir.ui.view">
        <field name="name">crm.lead.form.whatsapp</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_set_won_rainbowman']" position="after">
                <field name="enable_whatsapp" invisible="1"/>
                <button 
                    name="whatsapp_send_crm"
                    type="object"
                    icon="fa-whatsapp"
                    string="  Send By whatsapp"
                    class="btn-primary"
                    title="Send By whatsapp"
                    attrs="{'invisible': [('enable_whatsapp', '=', False)]}"/>
            </xpath>
            
        </field>
    </record>

</odoo>
