<odoo>
  <data>

    <record id="view_pos_pos_form_whatsapp" model="ir.ui.view">
        <field name="name">view.pos.pos.form.whatsapp</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='refund']" position="after">
                <field name="enable_whatsapp" invisible="1"/>
                <button 
                    name="whatsapp_send_order"
                    type="object"
                    icon="fa-whatsapp"
                    string="  Send By whatsapp"
                    class="btn-primary"
                    title="Send By whatsapp"
                    attrs="{'invisible': [('enable_whatsapp', '=', False)]}"/>
            </xpath>

        </field>
    </record>

  </data>
</odoo>