<odoo>
    <data>

        <record id="view_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">view.invoice.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='state']" position="after">
                    <field name="active_retencion" optional="1"/>
                </xpath>
                
            </field>
        </record>

        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">view.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="active_retencion" 
                    attrs="{'readonly':[('state','!=','draft')],
                            'invisible':[('move_type', '=','entry')]}"/>

                     <field name="porcentaje_retencion" 
                    attrs="{'invisible':[('active_retencion', '=',False)],
                            'readonly':[('state','!=','draft')]}"/>
                </xpath>
                
                <xpath expr="//field[@name='amount_residual']" position="after">
                    <field name="amount_retencion"
                    attrs="{'invisible':[('active_retencion', '=',False)]}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>