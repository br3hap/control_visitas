<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_peb_shipping_status_sunat_tree" model="ir.ui.view">
            <field name="name">peb.shipping.status.sunat.tree</field>
            <field name="model">peb.shipping.status.sunat</field>
            <field name="arch" type="xml">
                <tree string="Shipping status to sunat">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_peb_shipping_status_sunat_form" model="ir.ui.view">
            <field name="name">peb.shipping.status.sunat.form</field>
            <field name="model">peb.shipping.status.sunat</field>
            <field name="arch" type="xml">
                <form string="Shipping status to sunat">
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_shipping_status_sunat_form" model="ir.actions.act_window">
            <field name="name">Shipping status to sunat</field>
            <field name="res_model">peb.shipping.status.sunat</field>
            <field name="view_mode">tree,form</field>
            <!--<field name="search_view_id" ref="view_currency_search"/>-->
        </record>

        <menuitem id="menu_peb_shipping_status_sunat_form"
                  name="Shipping status to sunat"
                  action="action_shipping_status_sunat_form"
                  parent="sunat_catalogue.menu_sunat_catalogue"/>

    </data>
</odoo>

