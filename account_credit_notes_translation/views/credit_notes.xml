<?xml version="1.0" encoding="utf-8"?>
  <odoo>
      <data>
          <delete id="account.menu_action_move_out_refund_type" model="ir.ui.menu"/>
          <delete id="account.menu_action_move_in_refund_type" model="ir.ui.menu"/>
          <menuitem
              id="account.menu_action_move_out_refund_type"
              action="account.action_move_out_refund_type"
              parent="account.menu_finance_receivables"
              name="Notas de crédito"
              sequence="1"
              />
          <menuitem
              id="account.menu_action_move_in_refund_type"
              action="account.action_move_in_refund_type"
              parent="account.menu_finance_payables"
              name="Notas de crédito"
              sequence="1"
              />
          <!-- <delete id="account.menu_action_move_in_invoice_type" model="ir.ui.menu"/> -->
          <!-- <menuitem
              id="account.menu_action_move_in_invoice_type"
              action="account.action_move_in_invoice_type"
              parent="account.menu_finance_payables"
              name="Facturas"
              sequence="0"
              groups="account.group_account_user"/> -->
          <record id="account.action_move_out_refund_type" model="ir.actions.act_window">
              <field name="name">Notas de crédito</field>
              <field name="res_model">account.move</field>
              <field name="view_mode">tree,kanban,form</field>
              <field name="view_id" ref="account.view_invoice_tree"/>
              <field name="search_view_id" ref="account.view_account_invoice_filter"/>
              <field name="domain">[('move_type', '=', 'out_refund')]</field>
              <field name="context">{'default_move_type': 'out_refund'}</field>
              <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Crear una nota de crédito
                </p><p>
                  Tenga en cuenta que la forma más sencilla de crear una nota de crédito es hacerlo directamente
                  de la factura del cliente.
                </p>
              </field>
          </record>

          <record id="view_account_invoice_filter_invoice_refund" model="ir.ui.view">
              <field name="name">account.invoice.select.filter.in.invoice</field>
              <field name="model">account.move</field>
              <field name="arch" type="xml">
                  <search string="Search Invoice">
                      <field name="serie" filter_domain="[('serie','ilike',self)]"/>
                      <field name="correlativo" filter_domain="[('correlativo','ilike',self)]"/>
                      <field name="anho_dua" filter_domain="[('anho_dua','ilike',self)]"/>
                      <field name="name" string="Invoice"
                              filter_domain="[
                                  '|', '|' , '|', '|',
                                  ('name', 'ilike', self), ('invoice_origin', 'ilike', self),
                                  ('ref', 'ilike', self), ('invoice_payment_ref', 'ilike', self),
                                  ('partner_id', 'child_of', self)]"/>
                      <field name="journal_id"/>
                      <field name="partner_id" operator="child_of"/>
                      <field name="l10n_latam_document_type_id"/>
                      <field name="invoice_user_id" string="Salesperson" domain="[('share', '=', False)]"/>
                      <field name="team_id"/>
                      <field name="date" string="Period"/>
                      <filter domain="[('invoice_user_id', '=', uid)]" name="myinvoices" help="My Invoices"/>
                      <separator/>
                      <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                      <filter name="posted" string="Posted" domain="[('state', '=', 'posted')]"/>
                      <filter name="cancel" string="Cancelled" domain="[('state', '=', 'cancel')]"/>
                      <separator/>
                      <filter name="in_payment" string="In Payment" domain="[('payment_state', '=', 'in_payment'), ('state', '=', 'posted')]"/>
                      <filter name="paid" string="Paid" domain="[('payment_state', '=', 'paid'), ('state', '=', 'posted')]"/>
                      <filter name="unpaid" string="Not Paid" domain="[('payment_state', '=', 'not_paid'), ('state', '=', 'posted')]"/>
                      <filter name="late" string="Overdue" domain="['&amp;', ('invoice_date_due', '&lt;', time.strftime('%%Y-%%m-%%d')), ('state', '=', 'posted'), ('payment_state', '=', 'not_paid')]" help="Overdue invoices, maturity date passed"/>
                      <separator/>
                      <filter name="invoice_date" string="Invoice Date" date="invoice_date"/>
                      <filter name="due_date" string="Due Date" date="invoice_date_due"/>
                      <separator/>
                      <filter invisible="1" string="Late Activities" name="activities_overdue"
                          domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                          help="Show all records which has next action date is before today"/>
                      <filter invisible="1" string="Today Activities" name="activities_today"
                          domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                      <filter invisible="1" string="Future Activities" name="activities_upcoming_all"
                          domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))]"/>
                      <group expand="0" string="Group By">
                          <filter string="Salesperson" name="salesperson" context="{'group_by':'invoice_user_id'}"/>
                          <filter name="status" string="Status" context="{'group_by':'state'}"/>
                          <filter string="Sales Team" name="sales_channel" domain="[]" context="{'group_by':'team_id'}"/>
                          <separator/>
                          <filter string="Invoice Date" name="invoicedate" context="{'group_by': 'invoice_date'}"/>
                          <filter string="Due Date" name="duedate" context="{'group_by': 'invoice_date_due'}"/>
                          <filter string="Document Type" name="l10n_latam_document_type" domain="" context="{'group_by':'l10n_latam_document_type_id'}"/>
                      </group>
                  </search>
              </field>
          </record>

          <record id="account.action_move_in_refund_type" model="ir.actions.act_window">
            <field name="name">Nota de crédito</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_invoice_tree"/>
            <field name="search_view_id" ref="view_account_invoice_filter_invoice_refund"/>
            <field name="domain">[('move_type', '=', 'in_refund')]</field>
            <field name="context">{'default_move_type': 'in_refund'}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Crear una nota de crédito de proveedor
              </p><p>
                Tenga en cuenta que la forma más fácil de crear un crédito de proveedor es hacerlo directamente desde la factura del proveedor.              </p>
            </field>
          </record>

          <record id="account.action_move_in_invoice_type" model="ir.actions.act_window">
            <field name="name">Notas de crédito</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_invoice_tree"/>
            <field name="search_view_id" ref="view_account_invoice_filter_invoice_refund"/>
            <field name="domain">[('move_type', '=', 'in_invoice')]</field>
            <field name="context">{'default_move_type': 'in_invoice'}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a vendor bill
              </p><p>
                Create invoices, register payments and keep track of the discussions with your vendors.              </p>
            </field>
          </record>

          <record id="view_account_invoice_today_filter_inherited" model="ir.ui.view">
            <field name="name">account.in.refund.invoice.today.filter.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account_credit_notes_translation.view_account_invoice_filter_invoice_refund"/>
            <field name="arch" type="xml">
              <xpath expr="//filter[@name='myinvoices']" position="after">
                <filter string="Today Invoices" name="today_invoices"
                  domain="[('create_date','&gt;=',(context_today()).strftime('%Y-%m-%d'))]"/>
              </xpath>
            </field>
          </record>
      </data>
  </odoo>