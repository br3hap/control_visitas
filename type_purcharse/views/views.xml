<odoo>
  <data>
    <record model="ir.ui.view" id="type_purchase_order_form">
      <field name="name">Type Purchase Order</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='currency_id']" position="after">
          <field name="type_purchase"/>
        </xpath>   
      </field>
    </record>  
    <record model="ir.ui.view" id="type_purchase_order_tree">
      <field name="name">Type Purchase Order tree</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='origin']" position="after">
          <field name="type_purchase"/>
        </xpath>   
      </field>
    </record> 

    <record model="ir.ui.view" id="type_account_move_form">
      <field name="name">Type Account move</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='active_export_sale']" position="after">
          <field name="type_purchase" attrs="{'invisible':[('move_type', 'not in',['in_refund','in_invoice']),('type_purchase','=',False)]}"/> 
        </xpath>   
      </field>
    </record>

    <record model="ir.ui.view" id="type_account_move_tree">
      <field name="name">Type Account move tree</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_invoice_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='invoice_origin']" position="after">
          <field name="type_purchase" optional="hide" readonly="1" />
        </xpath>   
      </field>
    </record>  
  </data>
</odoo>