<odoo>
  <data>
    <record model="ir.ui.view" id="type_purchase_order_search">
      <field name="name">Search type Purchase Order</field> 
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
      <field name="arch" type="xml">
        <xpath expr="//filter[@name='my_purchases']" position="after">
            <separator/>
            <filter name="type_purchase_national" string="Nacionales" domain="[('type_purchase', '=', 'national')]"/>
            <filter name="type_purchase_international" string="Internacionales" domain="[('type_purchase', '=', 'international')]"/>
            <separator/>
        </xpath>   
      </field>
    </record>  
    <record model="ir.ui.view" id="type_purchase_order_search_view">
      <field name="name">Search type Purchase Order view</field> 
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
      <field name="arch" type="xml">
        <xpath expr="//filter[@name='my_Orders']" position="after">
            <separator/>
            <filter name="type_purchase_national" string="Nacionales" domain="[('type_purchase', '=', 'national')]"/>
            <filter name="type_purchase_international" string="Internacionales" domain="[('type_purchase', '=', 'international')]"/>
            <separator/>
        </xpath>   
      </field>
    </record>  



    <record model="ir.ui.view" id="type_account_move_search">
      <field name="name">Search type account move</field> 
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_account_invoice_filter"/>
      <field name="arch" type="xml">
        <xpath expr="//filter[@name='myinvoices']" position="after">
            <separator/>
            <filter name="type_purchase_national" string="Nacionales" domain="[('type_purchase', '=', 'national')]"/>
            <filter name="type_purchase_international" string="Internacionales" domain="[('type_purchase', '=', 'international')]"/>
            <separator/>
        </xpath>   
      </field>
    </record>

    <record model="ir.ui.view" id="type_account_move_search_notes">
      <field name="name">Search type account move credit notes</field> 
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account_credit_notes_translation.view_account_invoice_filter_invoice_refund"/>
      <field name="arch" type="xml">
        <xpath expr="//filter[@name='myinvoices']" position="after">
            <separator/>
            <filter name="type_purchase_national" string="Nacionales" domain="[('type_purchase', '=', 'national')]"/>
            <filter name="type_purchase_international" string="Internacionales" domain="[('type_purchase', '=', 'international')]"/>
            <separator/>
        </xpath>   
      </field>
    </record>
 
  </data>
</odoo>





