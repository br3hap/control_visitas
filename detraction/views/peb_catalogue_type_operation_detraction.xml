<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_peb_catalogue_type_operation_detraction_tree" model="ir.ui.view">
            <field name="name">peb.catalogue.type.operation.detraction.tree</field>
            <field name="model">peb.catalogue.type.operation.detraction</field>
            <field name="arch" type="xml">
                <tree string="Type Operation Detraction">
                    <field name="code"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_peb_catalogue_type_operation_detraction_form" model="ir.ui.view">
            <field name="name">peb.catalogue.type.operation.detraction.form</field>
            <field name="model">peb.catalogue.type.operation.detraction</field>
            <field name="arch" type="xml">
                <form string="Type Operation Detraction">
                    <group>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_catalogue_type_operation_detraction" model="ir.actions.act_window">
            <field name="name">Type Operation Detraction</field>
            <field name="res_model">peb.catalogue.type.operation.detraction</field>
            <field name="view_mode">tree,form</field>
            <!--<field name="search_view_id" ref="view_currency_search"/>-->
        </record>

        <menuitem id="menu_catalogue_type_operation_detraction"
                  name="Type Operation Detraction"
                  action="action_catalogue_type_operation_detraction"
                  parent="detraction.menu_detraction"/>

    </data>
</odoo>

