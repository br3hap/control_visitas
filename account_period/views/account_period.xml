<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--MANTENIMIENTO DE PERIODOS-->
        <record id="view_account_period_tree" model="ir.ui.view">
            <field name="name">account.period.tree</field>
            <field name="model">account.period</field>
            <field name="arch" type="xml">
                <tree string="Account Period">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="state_desc"/>
                </tree>
            </field>
        </record>

        <record id="view_account_period_form" model="ir.ui.view">
            <field name="name">account.period.form</field>
            <field name="model">account.period</field>
            <field name="arch" type="xml">
                <form string="Account Period">
                    <header>
                        <button name="close" states="open"
                            string="Close Period" type="object" class="oe_highlight" 
                            groups="close_open_period.group_user_close_open_period"
                            confirm="¿Seguro que quiere cerrar este período?"/>
                        <button name="open" states="close"
                            string="Open Period" type="object" class="oe_highlight" 
                            groups="close_open_period.group_user_close_open_period"
                            confirm="¿Seguro que quiere abrir este período?"/>
                        <field name="state" widget="statusbar" statusbar_visible="open,close" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" attrs="{'readonly': [('state', '=', 'close')]}"/>
                            <field name="code" attrs="{'readonly': [('state', '=', 'close')]}"/>
                            <field name="date_start" attrs="{'readonly': [('state', '=', 'close')]}"/>
                            <field name="date_stop" attrs="{'readonly': [('state', '=', 'close')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_account_period" model="ir.actions.act_window">
            <field name="name">Account Period</field>
            <field name="res_model">account.period</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_account_period_form"
                  name="Account Period"
                  action="action_account_period"
                  parent="account_period.menu_account_period"/>
        
        <!---->

        <!--MANTENIMIENTO DE CONFIGURACION DE PERIODOS-->

        <record id="view_masive_creation_period" model="ir.ui.view">
            <field name="name">Creación masiva de Periodos</field>
            <field name="model">masive.creation.period</field>
            <field name="arch" type="xml">
                <form string="Creación masiva de Periodos">
                    <group col="2">
                        <field name="fiscal_year"/>
                    </group>
                    <footer>
                        <button name="ejecutar" type="object" string="Ejecutar" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_masive_creation_period" model="ir.actions.act_window">
            <field name="name">Creación masiva de Períodos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">masive.creation.period</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_masive_creation_period"
                  name="Creación masiva de periodos"
                  action="action_masive_creation_period"
                  parent="account_period.menu_account_period"/>
        
        <!---->

    </data>
</odoo>

